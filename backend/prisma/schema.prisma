generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model user {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
}

enum source {
  MC
  MM
  MD
  CT
  EL
}

enum Status {
  NEW
  IN_PROGRESS
  CLOSED
}


enum origine {
  ORACLE
  MAXIMO
  EMC
  APM
}

model anomaly {
  id          String   @id @default(cuid())
  required_stoping Boolean?
  num_equipments String?
  duree_intervention String? @default("0")
  unite      String?
  systeme   String?
  descreption_anomalie String?
  descreption_equipment String?
  date_detection DateTime @default(now())
  origine origine? @default(ORACLE)
  resolution_date DateTime?
  date_traitement DateTime?
  section_proprietaire String?
  fiablite_integrite String?
  fiablite_conf String?
  disponsibilite String?
  disponibilite_conf String?
  process_safty String?
  process_safty_conf String?
  criticite String?
  status Status? @default(NEW)
  section source? @default(MC)
  comment String?
  rex_entrie   rex_entrie[] 
  actions  action_plan[]
  atachments attachments[]
  trained Boolean? @default(false)
  created_at DateTime @default(now())
  maintenance_window_id String?
  maintenance_window maintenance_window? @relation(fields: [maintenance_window_id], references: [id])
}



model attachments {
  id          String   @id @default(cuid())
  file_name   String?
  file_path   String?
  anomaly_id  String? 
  anomaly     anomaly? @relation(fields: [anomaly_id], references: [id])
}

enum ActionPlanStatus {
  NOT_COMPLETED
  COMPLETED
}

model action_plan {
  id          String   @id @default(cuid())
  Action String?
  responsable String?
  pdrs_disponible Boolean?
  resource_intern String?
  resource_extern String?
  status ActionPlanStatus? @default(NOT_COMPLETED)
  anomaly_id String?
  anomaly     anomaly? @relation(fields: [anomaly_id], references: [id])
}

model maintenance_window {
  id          String   @id @default(cuid())
  titlte String?
  date_debut_arret DateTime?
  date_fin_arret DateTime?
  duree_jour String?
  duree_heure String?
  anomaly anomaly[]
}

model maintenance_files{
  id          String   @id @default(cuid())
  file_name   String?
  file_path   String?
}

model rex_entrie {
  id          String   @id @default(cuid())
  summary     String?
  docment_path String?
  anomalies_id String? 
  anomalies   anomaly? @relation(fields: [anomalies_id], references: [id])
}


